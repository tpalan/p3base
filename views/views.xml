<odoo>
    <record model="ir.ui.view" id="account_invoice_p3_form_view">
        <field name="name">account.invoice.p3</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="period"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='narration']" position="replace">
                <group>
                    <field name="narration" placeholder="Add an internal note..." nolabel="1" width="50" widget="html"/>
                </group>
            </xpath>
            <xpath expr="//page[@id='other_tab_entry']/field[@name='narration']" position="replace">
                <group>
                    <field name="narration" placeholder="Add an internal note..." nolabel="1" width="50" widget="html"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_p3_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree.p3</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="period"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_p3_view">
        <field name="name">sale.order.p3</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- use HTML widget for editing note -->
            <xpath expr="//group[@name='note_group']/group/field[@name='note']" position="replace">
                <field name="note" nolabel="1" placeholder="Terms and conditions..." widget="html"/>
            </xpath>
        </field>
    </record>
</odoo>
